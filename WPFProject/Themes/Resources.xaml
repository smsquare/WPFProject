<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="WindowBackgroundColor01">#FF000000</Color>
    <Color x:Key="WindowBackgroundColor02">#FF232323</Color>

    <LinearGradientBrush x:Key="WindowBackground" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="{StaticResource WindowBackgroundColor02}" Offset="0.5" />
        <GradientStop Color="{StaticResource WindowBackgroundColor02}" Offset="1" />
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="TextBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FF999999" />
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#FF333333" />
    
</ResourceDictionary>