<UserControl x:Class="WPFProject.Controls.MenuButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:WPFProject.Controls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="36"/>
        </Grid.ColumnDefinitions>
        <Controls:FileButton Grid.Column="0" ContextMenuService.IsEnabled="True">
            <Controls:FileButton.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="New" />
                    <MenuItem Command="Open" />
                </ContextMenu>
            </Controls:FileButton.ContextMenu>
        </Controls:FileButton>
        <Controls:EditButton Grid.Column="1" ContextMenuService.IsEnabled="True">
            
        </Controls:EditButton>
    </Grid>
</UserControl>
