<UserControl x:Class="WPFProject.Controls.CloseButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="25" Height="32">
    <Grid MouseDown="OnMouseDown" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave" MouseUp="OnMouseUp">
        <Image x:Name="_imgDefault" Source="/WPFProject;component/Assets/btnCloseDefault_25x32.png" Opacity="1"/>
        <Image x:Name="_imgHover" Source="/WPFProject;component/Assets/btnCloseHover_25x32.png" Opacity="0"/>
        <Image x:Name="_imgPress" Source="/WPFProject;component/Assets/btnClosePressed_25x32.png" Opacity="0"/>
    </Grid>
</UserControl>
