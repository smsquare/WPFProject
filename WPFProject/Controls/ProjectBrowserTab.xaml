<UserControl x:Class="WPFProject.Controls.ProjectBrowserTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" MinWidth="72" MinHeight="24">
    <Grid MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave" MouseDown="OnMouseDown">
        <Image x:Name="_idle" Source="/WPFProject;component/Assets/PROJECT_TAB_BUTTON_IDLE.png" Stretch="Fill"/>
        <Image x:Name="_hover" Opacity="0.0" Source="/WPFProject;component/Assets/PROJECT_TAB_BUTTON_HOVER.png" Stretch="Fill"/>
        <Image x:Name="_selected" Opacity="0.0" Source="/WPFProject;component/Assets/PROJECT_TAB_BUTTON_SELECT.png" Stretch="Fill"/>
        <Label x:Name="_lblCaption" Content="Test" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="AntiqueWhite"/>
    </Grid>
</UserControl>
